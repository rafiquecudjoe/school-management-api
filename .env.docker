# ── Docker environment for Axion API ──
# MongoDB & Redis use Docker service names as hostnames
MONGO_URI=mongodb://mongo:27017/axion
REDIS_URI=redis://redis:6379
CORTEX_REDIS=redis://redis:6379
OYSTER_REDIS=redis://redis:6379
CACHE_REDIS=redis://redis:6379

SERVICE_NAME=axion
USER_PORT=5112
ADMIN_PORT=5223
ENV=production

CORTEX_PREFIX=none
CORTEX_TYPE=axion
OYSTER_PREFIX=none
CACHE_PREFIX=axion:ch

# ⚠️  Replace these with strong random secrets before deploying
LONG_TOKEN_SECRET=replace-with-long-random-secret
SHORT_TOKEN_SECRET=replace-with-short-random-secret
NACL_SECRET=replace-with-nacl-random-secret

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=300
API_MAX_BODY_SIZE=100kb
CORS_ORIGIN=*
